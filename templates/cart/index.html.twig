{% extends 'base.html.twig' %}

{% block title %}Votre panier!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Votre panier</h1>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Produit</th>
                <th scope="col">Prix</th>
                <th scope="col">Quantit√©</th>
                <th scope="col">Total</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for product in datacart %}
                <tr>
                    <td>{{ product.cake.name }}</td>
                    <td class="text-right">{{ product.cake.price }}</td>
                    <td>{{ product.quantity }}</td>
                    <td class="text-right">{{ product.quantity * product.cake.price }}</td>
                    <td>
                        <a href="{{ path("cart_add", {id: product.cake.id}) }}" class="btn btn-success">
                            <i class="bi bi-cart-plus"></i>
                        </a>
                        <a href="{{ path("cart_remove", {id: product.cake.id}) }}" class="btn btn-warning">
                            <i class="bi bi-cart-dash"></i>
                        </a>
                        <a href="{{ path("cart_delete", {id: product.cake.id}) }}" class="btn btn-danger">
                            <i class="bi bi-cart-x"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr class="text-center">Votre panier est vide.</tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3">total</td>
                <td class="text-end">{{ total }}</td>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
