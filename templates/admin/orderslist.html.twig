{% extends 'base.html.twig' %}

{% block title %}Commandes - {{ parent() }}{% endblock %}

{% block body %}
{% include "components/_adminnav.html.twig" %}
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex flex-column align-items-center">
                <h1 class="text-primary text-center mb-4">Commandes</h1>
                <div class="container">
                    {% for order in orders %}
                        <div class="row d-flex justify-content-center">
                            <div class="col-12">
                                <div class="card m-2">
                                    <div class="card-header">
                                        <div class="d-flex justify-content-between align-items-center">
                                            {% if order.orderStatus == "Commande annulée" %}
                                                <h5 class="card-text text-red">Le {{ order.orderedAt|date("d/m/Y") }}
                                                    à {{ order.orderedAt|date("H:i:s", "Europe/Paris") }}</h5>
                                                <h5 class="card-text text-red">{{ order.orderStatus }}</h5>
                                            {% else %}
                                                <h5 class="card-text">Le {{ order.orderedAt|date("d/m/Y") }}
                                                    à {{ order.orderedAt|date("h:i:s") }}</h5>
                                                <h5 class="card-text">{{ order.orderStatus }}</h5>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="card-body container">
                                        <div class="row">
                                        {% for cakes in order.orderLines %}
                                                <h5 class="card-title col-6">{{ cakes.cakeName }}</h5>
                                                <p class="card-text col-2">{{ cakes.cakeSize }}</p>
                                                <p class="card-text col-2">x{{ cakes.quantity }}</p>
                                                <p class="card-text col-2 text-end">{{ cakes.cakePrice|format_currency('EUR', locale='de') }}</p>
                                                <hr>
                                        {% endfor %}
                                        </div>
                                        <div class="row">
                                        {% for cakes in order.orderLines %}
                                            {% if loop.index == 1 %} {# this if won't be necessary anymore when the order will have only one baker #}
                                            <div class="col-xs-12 col-md-4">
                                                <h5 class="card-title text-center pt-1">Pâtissier</h5>
                                                <p class="card-text text-center">
                                                    {{ cakes.seller.firstname }} {{ cakes.seller.lastname }}
                                                <br>
                                                    {{ cakes.seller.email }}
                                                <br>
                                                    {{ cakes.seller.phone }}
                                                </p>
                                            </div>
                                            {% endif %}
                                        {% endfor %}
                                            <div class="col-xs-12 col-md-4">
                                                <h5 class="card-title text-center pt-1">Client</h5>
                                                <p class="card-text text-center">
                                                    {{ order.buyer.firstname }} {{ order.buyer.lastname }}
                                                <br> 
                                                    {{ order.buyer.email }}
                                                <br>
                                                    {{ order.buyer.phone }}
                                                </p>
                                            </div>
                                            <div class="col-xs-12 col-md-4">
                                                <h5 class="card-title text-end pt-1">
                                                    Total : {{ order.total|format_currency('EUR', locale='de') }}
                                                </h5>
                                                <p class="card-text text-end">
                                                    Date de collecte :
                                                    {{ order.collectDate|date("d/m/Y") }}
                                                </p>
                                                <p class="card-text text-end">
                                                    Commande N°
                                                    {{ order.number }}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
