<div class="cart-icon position-relative d-flex">
    <a class="cart-button position-absolute"
        {# It's ugly isn't it ? But hey it works. Enjoy fixing it! #}
        {% if app.session.get('datacart')|length > 0 %}
            style="bottom: 0;"
        {% else %}
            style="bottom: -20px;"
        {% endif %}
       href="{{ path("cart_index") }}">
        <img src="{{ asset("build/images/shopping_navbar.png") }}">
    </a>
    {% if app.session.get('datacart')|length > 0 %}
        <a class="cart-number-link position-relative" href="{{ path("cart_index") }}">
            <p class="cart-number d-flex justify-content-center align-items-center text-white rounded-pill">
                {{ app.session.get('datacart')|length }}
            </p>
        </a>
    {% endif %}
</div>
