{% extends 'base.html.twig' %}

{% block title %}Hello CakeController!{% endblock %}

{% block body %}
    <div class="container container-card">
        <div class="row d-flex justify-content-start">
            <h1 class="title-show text-center col-12">Nos g√¢teaux</h1>
            <form action="{{ path('get_filetered_cakes') }}" method="post">
                <div class="row">
                    <div class="col-6">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="categorie" value="theme" id="theme">
                            <label class="form-check-label" for="theme">
                                theme
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="categorie" value="categorie" id="categorie">
                            <label class="form-check-label" for="cat">
                                cat
                            </label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="theme" value="Enfant" id="enfant">
                            <label class="form-check-label" for="enfant">
                                Enfant
                            </label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Filtrer</button>
            </form>
        </div>
        {% for cake in cakes %}
            <div class="cake-card card border-0 bg-light col-md-6 col-lg-4">
                <img class="card-img-top" src="{{ asset('build/images/gateau.jpg') }}" alt="Card image cap">
                <div class="card-body p-0 d-flex flex-column">
                    <a href="{{ path('app_cake_show', {'id': cake.id}) }}"
                       class="title-cake text-dark text-decoration-none mb-2">{{ cake.name }} </a>
                    <div class="d-flex flex-row align-items-center">
                        <img src="{{ asset('build/images/icons/Star_15.png') }}">
                        <img src="{{ asset('build/images/icons/Star_15.png') }}">
                        <img src="{{ asset('build/images/icons/Star_15.png') }}">
                        <img src="{{ asset('build/images/icons/Star_15.png') }}">
                        <img src="{{ asset('build/images/icons/Star_15.png') }}">
                        <p class="avis">3 avis</p>
                    </div>
                    <div class="d-flex flew-row justify-content-between">
                        <p>Disponnible dans 10 jours</p>
                        <p class="">{{ cake.price }}</p>
                    </div>
                    <div class="d-flex align-items-baseline">
                        <img src="{{ asset('build/images/icons/hat.png') }}" class="hat">
                        <h5 class="text-start opacity-50"> {{ cake.baker.lastname }}
                            .{{ cake.baker.firstname |slice(0, 1) }} </h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    </div>
{% endblock %}

