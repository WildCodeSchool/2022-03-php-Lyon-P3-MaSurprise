{% extends 'base.html.twig' %}

{% block title %}Modifier votre pâtisserie - {{ parent() }}{% endblock %}

{% block body %}
    <h1 class="text-primary text-center">Modifier votre pâtisserie</h1>

    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-6">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <p>Photos du gâteau</p>
                <div class="cake-image container">
                    <div class="row">
                        {% for picture in cake.picture1|split(',') %}
                            <img src="/uploads/cakes/{{ picture }}" class="img-fluid col-3 m-1">
                        {% endfor %}
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-secondary text-white p-2">
                        {{ button_label|default('Enregistrer les modifications') }}
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {{ include('cake/_delete_form.html.twig') }}

    <a href="{{ path('app_cake_index') }}">Retour à la liste</a>
{% endblock %}
